% neurips_2025.sty
% Style file for NeurIPS 2025 (based on NeurIPS 2024 template)
% This is a simplified version for arXiv preprint compatibility

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{neurips_2025}[2025/01/01 NeurIPS 2025 submission style]

% Options
\newif\if@preprint\@preprinttrue
\newif\if@final\@finalfalse
\newif\if@nonatbib\@nonatbibfalse

\DeclareOption{preprint}{\@preprinttrue}
\DeclareOption{final}{\@finaltrue\@preprintfalse}
\DeclareOption{nonatbib}{\@nonatbibtrue}
\ProcessOptions\relax

% Required packages
\RequirePackage{fancyhdr}
\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{natbib}
\RequirePackage{algorithm}
\RequirePackage{algorithmic}
\RequirePackage{hyperref}
\RequirePackage{xcolor}

% Page layout (NeurIPS standard)
\setlength{\paperwidth}{8.5in}
\setlength{\paperheight}{11in}
\setlength{\textwidth}{6.0in}
\setlength{\textheight}{9.0in}
\setlength{\oddsidemargin}{0.25in}
\setlength{\evensidemargin}{0.25in}
\setlength{\topmargin}{-0.25in}
\setlength{\headheight}{12pt}
\setlength{\headsep}{25pt}

% Line spacing
\renewcommand{\baselinestretch}{1.0}

% Title formatting
\def\@maketitle{%
  \newpage
  \null
  \vskip 2em%
  \begin{center}%
    {\LARGE \@title \par}%
    \vskip 1.5em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
    \vskip 1em%
    \if@preprint
      {\normalsize Preprint. Under review.}%
    \fi
  \end{center}%
  \par
  \vskip 1.5em}

% Abstract formatting
\renewenvironment{abstract}%
{\centerline{\large\bfseries Abstract}\vspace{0.5ex}\begin{quote}}%
{\par\end{quote}\vskip 1ex}

% Section formatting
\renewcommand\section{\@startsection {section}{1}{\z@}%
  {-3.5ex \@plus -1ex \@minus -.2ex}%
  {2.3ex \@plus.2ex}%
  {\normalfont\Large\bfseries}}

\renewcommand\subsection{\@startsection{subsection}{2}{\z@}%
  {-3.25ex\@plus -1ex \@minus -.2ex}%
  {1.5ex \@plus .2ex}%
  {\normalfont\large\bfseries}}

% Hyperref setup
\hypersetup{
  colorlinks=true,
  linkcolor=blue,
  citecolor=blue,
  urlcolor=blue
}

% Footer for preprint
\if@preprint
  \pagestyle{fancy}
  \fancyhf{}
  \fancyfoot[C]{\thepage}
  \renewcommand{\headrulewidth}{0pt}
\fi

\endinput

